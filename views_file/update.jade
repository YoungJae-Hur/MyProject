doctype html
html
	head
		meta(charset='utf-8')
	body
		h1 
			a(href='/') Server Side JavaScript
		ul
			each val in topics
				li
					a(href='/'+val.title)= val.title
		artcle
			form(action='/update/'+title  method='post')
				p 
					input(type='text' name='title' value=title)
					input(type='hidden' name='oriTitle' value=oriTitle)
				p 
					textarea(name='description')= description
				p 
					input(type='submit' value='Update')
					