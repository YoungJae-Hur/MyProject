doctype html
html
	head
		meta(charset='utf-8')
	body
		h1 
			a(href='/') Server Side JavaScript
		ul
			each val in topics
				li
					a(href='/'+val.title)= val.title
		artcle
			form(action='/update/'+title  method='post')
				p 
					input(type='text' name='title' value=title)
					input(type='hidden' name='id' value=id)
				p 
					textarea(name='description')= description
				p 
					select(name='authorId')
						-for (var i = 0; i < authors.length; i++)
							if author_id == authors[i].id
								option(value="#{authors[i].id}" selected) #{authors[i].name}
							else 
								option(value="#{authors[i].id}") #{authors[i].name}
				p 
					input(type='submit' value='Update')
					