doctype html
html
	head
		meta(charset='utf-8')
	body
		h1 
			a(href='/') Server Side JavaScript
		ul
			each val in topics
				li
					a(href='/'+val.title)= val.title
		artcle
			form(action='/' method='post')
				p 
					input(type='text' name='title' value='title')
				p 
					textarea(name='description')
				p
					select(name='author')
						-for (var i = 0; i < authors.length; i++)
							option(value="#{authors[i].id}") #{authors[i].name}
				p 
					input(type='submit')